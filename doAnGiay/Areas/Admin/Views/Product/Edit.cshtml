@model doAnGiay.Models.Product

@{
    ViewBag.Title = "Edit";

}

<h2>Edit</h2>
@using (Html.BeginForm("Edit", "product", "admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <input type="hidden" name="ProductId" value="@Model.ProductId" />
    <div class="row">
        <div class="col-md-6">
            @Html.LabelFor(row => row.ProductName)
            @Html.TextBoxFor(row => row.ProductName, new { @class = "form-control", placeholder = "Ten giay.." })

            @Html.LabelFor(row => row.Price)
            @Html.TextBoxFor(row => row.Price, new { @class = "form-control", placeholder = "Gia giay.." })
        </div>
        <div class="col-md-6">
            @Html.LabelFor(row => row.DateOfPuchase)
            @Html.TextBoxFor(row => row.DateOfPuchase, new { @class = "form-control", placeholder = "ngay nhap giay.." })

            @Html.LabelFor(row => row.AvailabilityStatus)
            @Html.TextBoxFor(row => row.AvailabilityStatus, new { @class = "form-control", placeholder = "trang thai giay.." })
        </div>
        <div class="col-md-6">
            @Html.LabelFor(row => row.Active)
            @Html.TextBoxFor(row => row.Active, new { @class = "form-control", placeholder = "giay.." })

            @Html.LabelFor(row => row.Size)
            @Html.TextBoxFor(row => row.Size, new { @class = "form-control", placeholder = "Size giay.." })
        </div>
        <div class="col-md-6">
            @Html.LabelFor(row => row.CategoryId)
            @Html.TextBoxFor(row => row.CategoryId, new { @class = "form-control", placeholder = "Nhâp: 1 loại thấp cổ, 2 loại cao cổ" })

            @Html.LabelFor(row => row.BrandID)
            @Html.TextBoxFor(row => row.BrandID, new { @class = "form-control", placeholder = "Nhập: 1 là Nike, 2 là: MLB, 3 là: Adidas " })
        </div>
        <div class="col-md-6">
            @Html.LabelFor(row => row.Gender)
            @Html.TextBoxFor(row => row.Gender, new { @class = "from-control", Placeholder = "Nhập giới tính" })

            @Html.LabelFor(row => row.ImageUrl)
            @Html.TextBox("imgFile", "", new { type = "file" })
        </div>


    </div>
    <button type="submit" class="btn btn-primary m-4">Edit</button>
}

