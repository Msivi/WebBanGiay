@model doAnGiay.Areas.Admin.ViewModelAD.registerVMAD

@{
    ViewBag.Title = "RegiterAD";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage1.cshtml";
}

<h2>Thêm tài khoản người dùng</h2>
@using (Html.BeginForm("RegiterAD", "Account", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-6">
            @Html.LabelFor(temp => temp.UserName)
            @Html.TextBoxFor(temp => temp.UserName, new { placehoder = "Username", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.UserName)

        </div>
        <div class="col-md-6">
            @Html.LabelFor(temp => temp.Email)
            @Html.TextBoxFor(temp => temp.Email, new { placehoder = "Email", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.Email)

        </div>

        <div class="col-md-6">
            @Html.LabelFor(temp => temp.Password)
            @Html.PasswordFor(temp => temp.Password, new { placehoder = "Password", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.Password)

        </div>
        <div class="col-md-6">
            @Html.LabelFor(temp => temp.ConfirmPassword)
            @Html.PasswordFor(temp => temp.ConfirmPassword, new { placehoder = "ConfirmPassword", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.ConfirmPassword)

        </div>
        <div class="col-md-6">
            @Html.LabelFor(temp => temp.Mobile)
            @Html.TextBoxFor(temp => temp.Mobile, new { placehoder = "Mobile", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.Mobile)

        </div>
        <div class="col-md-6">
            @Html.LabelFor(temp => temp.DateOfBirth)
            @Html.TextBoxFor(temp => temp.DateOfBirth, new { placehoder = "DateOfBirth", @class = "form-control", type = "date" })
            @Html.ValidationMessageFor(temp => temp.DateOfBirth)

        </div>
        <div class="col-md-6">
            @Html.LabelFor(temp => temp.Address)
            @Html.TextBoxFor(temp => temp.Address, new { placehoder = "Address", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.Address)

        </div>
        <div class="col-md-6">
            @Html.LabelFor(temp => temp.City)
            @Html.TextBoxFor(temp => temp.City, new { placehoder = "City", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.City)

        </div>
    </div>
    <button type="submit" class="btn btn-success m-2">Đăng ký</button>
}

